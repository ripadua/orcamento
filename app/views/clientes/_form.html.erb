<%= bootstrap_form_for @cliente, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-8", inline_errors: false do |f| %>
  
  <%= f.alert_message "Por favor corrija os erros abaixo: " %>

	<%= f.select :tipo_pessoa, options_for_select(listar_tipos_pessoa, @cliente.tipo_pessoa), {control_col: 'col-sm-2'}, {id: "tipopessoa"} %>

	<%= f.text_field :nome, id: "campo_nome", wrapper: {class: 'pessoa_fisica'}, autofocus: true %>
	
	<%= f.text_field :nome, label: 'RazÃ£o Social', wrapper: {class: 'pessoa_juridica'}, id: "campo_razao_social", autofocus: true %>
	
	<%= f.text_field :contato, id: "campo_contato", wrapper: {class: 'pessoa_juridica'} %>

	<%= f.text_field :documento, label: 'CPF', control_col: 'col-sm-2', id: "campo_cpf", wrapper: {class: 'pessoa_fisica'} %>

	<%= f.text_field :documento, label: 'CNPJ', control_col: 'col-sm-3', id: "campo_cnpj", wrapper: {class: 'pessoa_juridica'} %>
    	
  <%= f.text_field :cep, control_col: 'col-sm-3', id: "cep", append: link_to("Consultar CEP", "#", id: 'consultacep', class: "btn btn-info") %>

	<%= f.text_field :endereco, id: "endereco" %>
	
	<%= f.text_field :complemento, control_col: 'col-sm-4', id: "complemento" %>
	
	<%= f.text_field :bairro, control_col: 'col-sm-4', id: "bairro" %>
	
	<%= f.text_field :cidade, control_col: 'col-sm-4', id: "cidade" %>
	
  <%= f.select :uf, options_for_select(listar_ufs, @cliente.uf), {include_blank: "Selecione...", control_col: 'col-sm-2'}, {class: 'form-control', id: 'uf'} %>

	<%= f.text_field :telefone, control_col: 'col-sm-2', id: "telefone" %>

	<%= f.text_field :celular, control_col: 'col-sm-2', id: "celular" %>
	
	<%= f.text_field :data_nascimento, control_col: 'col-sm-2', wrapper: {class: 'pessoa_fisica'}, data: {provide: 'datepicker', "date-format" => 'dd/mm/yyyy', 'date-language' => 'pt-BR'}, value: @cliente.data_nascimento.nil? ? @cliente.data_nascimento : l(@cliente.data_nascimento) %>
	
	<%= f.text_field :email, control_col: 'col-sm-4' %>
	
	<%= f.text_area :observacoes %>
  
  <input type='hidden' name='new_from_orcamento' value='<%= @orcamento %>'>
  
  <div class="pull-right">
  	<%= link_to clientes_path, class: "btn btn-default" do %>
  		<i class="glyphicon glyphicon-arrow-left"></i> Voltar
  	<% end %>
	  <%= button_tag(type: 'submit', class: 'btn btn-primary') do %>
	  	<i class="glyphicon glyphicon-floppy-disk"></i> Salvar
	  <% end %>
  </div>
  
<% end %>
