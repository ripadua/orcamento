<%= render 'layouts/messages' %>

<div class="page-header">
	<h1>Clientes</h1>
</div>

<table class="table table-striped table-bordered table-hover table-responsive">
  <thead>
    <tr>
      <th>Nome</th>
      <th class="hidden-xs">Telefone</th>
      <th class="hidden-xs">Celular</th>
      <th class="hidden-xs hidden-sm">E-mail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td class="hidden-xs"><%= cliente.telefone %></td>
        <td class="hidden-xs"><%= cliente.celular %></td>
        <td class="hidden-xs hidden-sm"><%= cliente.email %></td>
        <td class="text-center">
        	<%= link_to cliente, class: "btn btn-primary btn-xs" do %>
        		<i class="glyphicon glyphicon-search" title="Visualizar"></i>
        	<% end %> 
        </td>
        <td class="text-center">
        	<%= link_to edit_cliente_path(cliente), class: "btn btn-info btn-xs" do %>
        		<i class="glyphicon glyphicon-pencil" title="Alterar"></i>
        	<% end %> 
        </td>
        <td class="text-center">
        	<%= link_to cliente, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger btn-xs" do %>
        		<i class="glyphicon glyphicon-remove" title="Remover"></i>
        	<% end %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_cliente_path, class: "btn btn-success pull-right" do %>
	<i class="glyphicon glyphicon-plus"></i> Novo cliente
<% end %>
