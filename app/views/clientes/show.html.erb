<%= render 'layouts/messages' %>

<div class="page-header">
	<h1>Visualizando Cliente</h1>
</div>

<p>
  <strong>Tipo Pessoa:</strong>
  <%= valor_tipo_pessoa(@cliente) %>
</p>

<p>
  <strong><%= label_nome(@cliente) %>:</strong>
  <%= @cliente.nome %>
</p>

<p>
  <strong><%= label_documento(@cliente) %>:</strong>
  <%= @cliente.documento %>
</p>

<% if @cliente.pessoa_juridica? %>
	<p>
		<strong>Contato:</strong>
  		<%= @cliente.contato %>
	</p>
<% end %>


<p>
  <strong>Endereço:</strong>
  <%= @cliente.endereco %>
</p>

<p>
  <strong>Complemento:</strong>
  <%= @cliente.complemento %>
</p>

<p>
  <strong>Bairro:</strong>
  <%= @cliente.bairro %>
</p>

<p>
  <strong>Cidade:</strong>
  <%= @cliente.cidade %>
</p>

<p>
  <strong>CEP:</strong>
  <%= @cliente.cep %>
</p>

<p>
  <strong>UF:</strong>
  <%= @cliente.uf %>
</p>

<p>
  <strong>Telefone:</strong>
  <%= @cliente.telefone %>
</p>

<p>
  <strong>Celular:</strong>
  <%= @cliente.celular %>
</p>

<% if @cliente.pessoa_fisica? %>
  <p>
    <strong>Data de Nascimento:</strong>
    <%= l @cliente.data_nascimento %>
  </p>
<% end %>

<p>
  <strong>E-mail:</strong>
  <%= @cliente.email %>
</p>

<p>
  <strong>Observações:</strong>
  <%= @cliente.observacoes %>
</p>

<div class="pull-right">
	<%= link_to clientes_path, class: "btn btn-default" do %>
		<i class="glyphicon glyphicon-arrow-left"></i> Voltar
	<% end %>
	
	<%= link_to edit_cliente_path(@cliente), class: "btn btn-info" do %>
		<i class="glyphicon glyphicon-pencil"></i> Alterar
	<% end %> 
</div>
