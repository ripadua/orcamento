<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title><%= content_for?(:title) ? yield(:title) : "Expresso" %></title>
		<%= stylesheet_link_tag    'application', controller_name, media: 'all', 'data-turbolinks-track' => true %>
		<%= stylesheet_link_tag    'sidebar' %>
		<%= javascript_include_tag 'application', controller_name, 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
		<%= yield(:head) %>
	</head>
	<body>
		<div class="container-fluid">
			<div class="row">
				<%= yield %>
			</div>
		</div>
		<div id="loading-indicator">
			<%= image_tag("loading.gif", :id => "loading-indicator") %>
		</div>
	</body>
</html>
