<%= render 'layouts/messages' %>

<div class="page-header">
	<h1>Serviços</h1>
</div>

<nav style="text-align: center">
  <%= paginate @servicos, :theme => 'twitter-bootstrap-3' %>
</nav>

<table class="table table-striped table-bordered table-hover table-responsive">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Unidade</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servicos.each do |servico| %>
      <tr>
        <td><%= servico.nome %></td>
        <td align="center"><%= servico.unidade %></td>
        <td align="right"><%= number_to_currency(servico.valor) %></td>
        <td class="text-center">
        	<%= link_to servico, class: "btn btn-primary btn-xs" do %>
        		<i class="glyphicon glyphicon-search" title="Visualizar"></i>
        	<% end %> 
        </td>
        <td class="text-center">
        	<%= link_to edit_servico_path(servico), class: "btn btn-info btn-xs" do %>
        		<i class="glyphicon glyphicon-pencil" title="Alterar"></i>
        	<% end %> 
        </td>
        <td class="text-center">
        	<%= link_to servico, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger btn-xs" do %>
        		<i class="glyphicon glyphicon-remove" title="Remover"></i>
        	<% end %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_servico_path, class: "btn btn-success pull-right" do %>
	<i class="glyphicon glyphicon-plus"></i> Novo serviço
<% end %>
